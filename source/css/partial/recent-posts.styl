#recent-posts {
    max-width: 700px;
    padding: 0px 20px;
    height: auto;
    margin: 0 auto;
}
.recent-post-item {
    background-color: #FFF;
    margin-top: 30px;
    font-size: 16px;
    line-height: 2;
}

.index_post_title {
    text-decoration: none;
    letter-spacing: 2px;
    color: #5f5f5f;
    font-size: 30px;
    font-weight: 600;
}

.post-footer {
    padding: 0 0 60px 0;
    border-bottom: 1px solid #f2f2f2;

    .date {
        float: left;
        font-size: 13px;
        color: #bbbbbb;
        a {
        text-decoration: none;
        color: #bbbbbb;
        }
           .dateleft {
              flex-grow: 1;
           }


    }
}

.readmore
    float: right;

.top {
    float: left;
    font-size: 12px;
}

.sticky {
    color: #ff7242;
}


    
